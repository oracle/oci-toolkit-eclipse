<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>com.oracle.oci.eclipse.plugin</artifactId>
	 <packaging>eclipse-plugin</packaging>
	<parent>
		<groupId>com.oracle.oci.eclipse</groupId>
		<artifactId>com.oracle.oci.eclipse.root</artifactId>
		<version>1.4.0-SNAPSHOT</version>
	</parent>

	<properties>
		<oci.java.sdk.ver>3.24.0</oci.java.sdk.ver>
	</properties>

	<!-- START: Delete Public GitHub -->
	<profiles>
		<profile>
			<id>sign</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<phase>compile</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<!-- Delete the oracle.pem file if it's there, otherwise the 'publickey' 
											goal below will go interactive and ask Y/N to overwrite. -->
										<delete failonerror="false" file="./oracle.pem" />
										<delete failonerror="false" file="${project.parent.basedir}/oracle.pem" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>com.oracle.ccss</groupId>
						<artifactId>codesign-maven-plugin</artifactId>
						<version>5.2</version>
						<executions>
							<execution>
								<phase>package</phase>
								<goals>
									<goal>publickey</goal>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<downloadLocation>target/</downloadLocation>
							<certType>java</certType>
							<certFormat>pem</certFormat>
							<user>oci_dex_tools_grp</user>
							<globalUID>pritpate</globalUID>
							<fileToSign>${project.build.directory}/com.oracle.oci.eclipse.plugin-1.4.0-SNAPSHOT.jar</fileToSign>
							<signLocation>${project.build.directory}</signLocation>
							<signMethod>java2</signMethod>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>updatesdk</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<version>3.1.0</version>
						<configuration>
							<filesets>
								<fileset>
									<directory>lib</directory>
									<includes>
										<include>**</include>
									</includes>
									<followSymlinks>false</followSymlinks>
								</fileset>
							</filesets>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<version>3.2.0</version>
						<executions>
							<execution>
								<id>copy-dependencies</id>
								<phase>process-sources</phase>
								<goals>
									<goal>copy-dependencies</goal>
								</goals>
								<configuration>
									<excludeGroupIds>p2.eclipse-plugin</excludeGroupIds>
									<excludeArtifactIds>com.oracle.oci.eclipse.plugin</excludeArtifactIds>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<version>3.2.0</version>
						<executions>
							<execution>
								<id>copy-thirdparty-resources</id>
								<phase>process-sources</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>lib/thirdparty</outputDirectory>
									<resources>
										<resource>
											<directory>target/dependency</directory>
											<excludes>
												<exclude>oci-java-sdk*.jar</exclude>
											</excludes>
										</resource>
									</resources>
								</configuration>
							</execution>
							<execution>
								<id>copy-oci-sdk-resources</id>
								<phase>process-sources</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<outputDirectory>../plugins/lib/sdk</outputDirectory>
									<resources>
										<resource>
											<directory>target/dependency</directory>
											<includes>
												<include>oci-java-sdk*.jar</include>
											</includes>
										</resource>
									</resources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
			<dependencies>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-common</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-core</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-objectstorage</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-identity</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-workrequests</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-database</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-circuitbreaker</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-containerengine</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
                        <groupId>com.oracle.oci.sdk</groupId>
                        <artifactId>oci-java-sdk-identitydataplane</artifactId>
                        <version>${oci.java.sdk.ver}</version>
                </dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-vault</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-keymanagement</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-secrets</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-resourcemanager</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
				<dependency>
					<groupId>com.oracle.oci.sdk</groupId>
					<artifactId>oci-java-sdk-common-httpclient-jersey</artifactId>
					<version>${oci.java.sdk.ver}</version>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>updateClasspath</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.8</version>
						<executions>
							<execution>
								<phase>process-sources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<ant target="updateAll" antfile="build.xml" />
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- END: Delete Public GitHub -->

		<profile>
			<id>updateCopyrights</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.mycila</groupId>
						<artifactId>license-maven-plugin</artifactId>
						<version>3.0</version>
						<executions>
							<execution>
								<id>first</id>
								<goals>
									<goal>format</goal>
								</goals>
								<phase>process-sources</phase>
								<configuration>
									<aggregate>true</aggregate>
									<properties>
										<current.year>2020</current.year>
									</properties>
									<header>${project.parent.basedir}/licenseheader.txt</header>
									<includes>
										<include>src/com/**/*.java</include>
									</includes>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.eclipse.tycho
										</groupId>
										<artifactId>
											tycho-packaging-plugin
										</artifactId>
										<versionRange>
											[0.25.0,)
										</versionRange>
										<goals>
											<goal>validate-id</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
